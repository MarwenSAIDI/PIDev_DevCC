{% extends 'frontbase.html.twig' %}
{% block body %}
    <section class="ftco-section" id="doctor-section">
        <div class="container-fluid px-5">
            <div class="row justify-content-center mb-5 pb-2">
                <div class="col-md-8 text-center heading-section ftco-animate">
                    <h2 class="mb-4">Vos RÃ¨servations</h2>
                </div>
            </div>

            <div class="row">
                {% for reservation in reservations %}

                    <div class="col-md-6 col-lg-3 ftco-animate">
                        <div class="staff">
                            <div class="img-wrap d-flex align-items-stretch">
                                <img src="{{ asset('uploads/images/' ~ reservation.getImage()) }}"
                                     alt = "" style = "width: 300px ; height:300px">

                            </div>
                            <div class="text pt-3 text-center">
                                <div class="meta mb-3">
                                    <div><a href="#">{{ reservation.getHeure() }}</a></div>
                                </div>
                                <h3 class="mb-2">{{ reservation.getDate() ? reservation.date|date('Y-m-d') : '' }}</h3>

                                <div class="faded">
                                    <p>{{ reservation.getType() }}</p>
                                    <span class="position mb-2">{{ reservation.getEtat() }}</span>
                                    <ul class="ftco-social text-center">
                                        <li class="ftco-animate"><a href="#"><span class="icon-twitter"></span></a></li>
                                        <li class="ftco-animate"><a href="#"><span class="icon-facebook"></span></a></li>
                                        <li class="ftco-animate"><a href="#"><span class="icon-google-plus"></span></a></li>
                                        <li class="ftco-animate"><a href="#"><span class="icon-instagram"></span></a></li>
                                    </ul>
                                    <a class="btn btn-info btn-icon-split" href="{{ path('reservation_edit', {'idreservation': reservation.getIdreservation}) }}">Modifier</a>
                                    {{ include('reservation/_delete_form.html.twig') }}

                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <tr>
                        <td colspan="8">no records found</td>
                    </tr>
                {% endfor %}
            </div>


        </div>

    </section>
{% endblock %}
