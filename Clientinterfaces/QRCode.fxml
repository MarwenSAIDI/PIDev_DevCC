<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTabPane?>
<?import com.jfoenix.controls.JFXTextField?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" alignment="TOP_CENTER" prefWidth="510.0" spacing="10.0" stylesheets="@qrcode.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Clientinterfaces.QRCodeController">
   <children>
      <Label styleClass="title" text="QR Code" />
      <JFXTabPane tabMinWidth="169.0" VBox.vgrow="ALWAYS">
         <tabs>
            <Tab style="-fx-pref-width: 500;" styleClass="tab-title" text="Generator">
               <content>
                  <VBox spacing="10.0">
                     <children>
                        <HBox prefHeight="135.0" prefWidth="470.0" spacing="10.0" styleClass="box-header">
                           <children>
                              <Label fx:id="areaInputGen" prefHeight="131.0" prefWidth="427.0" styleClass="box-title" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </HBox>
                        <HBox spacing="10.0" VBox.vgrow="ALWAYS">
                           <children>
                              <VBox spacing="14.0">
                                 <children>
                                    <JFXTextField fx:id="fieldWidthGen" promptText="Width" styleClass="field-size" />
                                    <JFXTextField fx:id="fieldHeightGen" promptText="Height" styleClass="field-size" />
                                 </children>
                              </VBox>
                              <HBox spacing="10.0" styleClass="box-header" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="box-title" text="Output" />
                                    <ImageView fx:id="imgQRCodeGen" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                                 </children>
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                              </HBox>
                           </children>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" spacing="10.0">
                           <children>
                              <JFXButton onAction="#onGenerate" style="-fx-pref-width: 90px;" text="Generate">
                                 <styleClass>
                                    <String fx:value="btn" />
                                    <String fx:value="btn-success" />
                                    <String fx:value="field" />
                                 </styleClass>
                              </JFXButton>
                              <JFXButton onAction="#onExportGen" style="-fx-pref-width: 90px;" text="Export">
                                 <styleClass>
                                    <String fx:value="btn" />
                                    <String fx:value="btn-primary" />
                                 </styleClass>
                              </JFXButton>
                           </children>
                        </HBox>
                     </children>
                     <VBox.margin>
                        <Insets top="10" />
                     </VBox.margin>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
         </tabs>
         <VBox.margin>
            <Insets />
         </VBox.margin>
        
      </JFXTabPane>
   </children>
   <padding>
      <Insets bottom="10.0" top="20.0" />
   </padding>
</VBox>
